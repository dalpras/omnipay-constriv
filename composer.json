{
    "name": "dalpras/omnipay-constriv",
    "type": "library",
    "description": "Constriv gateway for Omnipay payment processing library",
    "keywords": [
        "dalpras",
        "omnipay-constriv",
        "gateway",
        "merchant",
        "omnipay",
        "pay",
        "payment",
        "purchase"        
    ],
    "homepage": "https://github.com/dalpras/omnipay-constriv",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefano Dal Pra'",
            "email": "stefano.dalpra@gmail.com",
            "homepage": "http://www.dalpra.info",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "omnipay/common": "~2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Omnipay\\Constriv\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Omnipay\\Constriv\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
